<h1>Listing Filters</h1>

<table>
  <thead>
    <th>Title</th>
    <th>Main</th>
    <th>Keyword A</th>
    <th>Keyword B</th>
    <th></th>
  </thead>

<% @parameters.each do |parameter| %>
  <tr>
    <td class="title"><%= link_to parameter.title, parameter_path(parameter, :rss) %></td>
    <td><%= parameter.main %></td>
    <td><%= parameter.keyword_a %></td>
    <td><%= parameter.keyword_b %></td>
    <td><%= link_to 'Delete', parameter, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

